{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feat", "feature", "enhancement"]
    },
    {
      "title": "## 🐛 Bug Fixes", 
      "labels": ["fix", "bug", "bugfix"]
    },
    {
      "title": "## 🔧 Maintenance",
      "labels": ["chore", "ci", "docs", "refactor", "maintenance"]
    },
    {
      "title": "## 🧪 Testing",
      "labels": ["test", "tests"]
    }
  ],
  "template": "${{CHANGELOG}}\n\n**Full Changelog**: https://github.com/Nouuu/voice-transcriber/compare/${{FROM_TAG}}...${{TO_TAG}}",
  "pr_template": "- ${{TITLE}} by @${{AUTHOR}} in #${{NUMBER}}",
  "commit_template": "- ${{TITLE}} by @${{AUTHOR}} (${{SHA}})",
  "empty_template": "- no changes",
  "transform": {
    "pr": {
      "title": [
        {
          "pattern": "^(feat|feature).*",
          "target": "feat"
        },
        {
          "pattern": "^(fix|bug).*",
          "target": "fix"
        },
        {
          "pattern": "^(chore|ci|docs|refactor).*",
          "target": "chore"
        },
        {
          "pattern": "^test.*",
          "target": "test"
        }
      ]
    },
    "commit": {
      "title": [
        {
          "pattern": "^(feat|feature).*",
          "target": "feat"
        },
        {
          "pattern": "^(fix|bug).*", 
          "target": "fix"
        },
        {
          "pattern": "^(chore|ci|docs|refactor).*",
          "target": "chore"
        },
        {
          "pattern": "^test.*",
          "target": "test"
        }
      ]
    }
  }
}