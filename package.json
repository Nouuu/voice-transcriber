{
	"name": "voice-transcriber",
	"version": "0.1.3",
	"description": "Lightweight desktop voice transcription with OpenAI Whisper and system tray integration",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/nospy/voice-transcriber.git"
	},
	"homepage": "https://github.com/nospy/voice-transcriber#readme",
	"bugs": {
		"url": "https://github.com/nospy/voice-transcriber/issues"
	},
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"voice-transcriber": "./dist/index.js"
	},
	"files": [
		"dist",
		"assets"
	],
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"start": "bun run src/index.ts",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"clean": "rm -rf dist tmp",
		"build": "bun build src/index.ts --outdir dist --target node --format esm",
		"prepublishOnly": "make build && make test",
		"check-deps": "(which arecord || echo 'Install alsa-utils: sudo apt-get install alsa-utils') && (which xsel || echo 'Install xsel: sudo apt-get install xsel')"
	},
	"dependencies": {
		"clipboardy": "^4.0.0",
		"openai": "^5.11.0",
		"systray2": "^2.1.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@types/bun": "latest",
		"@types/node": "^24.2.0",
		"typescript": "^5.3.3"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"engines": {
		"node": ">=22",
		"bun": ">=1.2.0"
	}
}
