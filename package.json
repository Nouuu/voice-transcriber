{
	"name": "voice-transcriber",
	"version": "0.3.0",
	"description": "Lightweight desktop voice transcription with OpenAI Whisper and system tray integration",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/nouuu/voice-transcriber.git"
	},
	"homepage": "https://github.com/nouuu/voice-transcriber#readme",
	"bugs": {
		"url": "https://github.com/nouuu/voice-transcriber/issues"
	},
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"start": "bun run src/index.ts",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"clean": "rm -rf dist tmp",
		"build": "bun build src/index.ts --outdir dist --target node --format esm --external node-systray-v2",
		"check-deps": "(which arecord || echo 'Install alsa-utils: sudo apt-get install alsa-utils') && (which xsel || echo 'Install xsel: sudo apt-get install xsel')"
	},
	"dependencies": {
		"@breezystack/lamejs": "^1.2.7",
		"clipboardy": "^4.0.0",
		"node-systray-v2": "https://github.com/Edgar-P-yan/node-systray-v2.git",
		"openai": "^5.11.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/node": "^24.2.0",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"prettier": "^3.6.2",
		"typescript": "^5.3.3"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"engines": {
		"node": ">=22",
		"bun": ">=1.2.0"
	}
}
